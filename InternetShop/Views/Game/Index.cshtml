@model IEnumerable<InternetShop.Models.Game>
<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список игр</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Game" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Добавить новую игру
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Название Игры</th>
                    <th>Цена</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.Price</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Game" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-controller="Game" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </table>
    }
    else
    {
        <p>Нет записей в базе данных</p>
    }
</div>




