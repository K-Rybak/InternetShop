@model InternetShop.Models.ViewModel.GameVM

<form method="post">
    <div class="border p-3">
        <input asp-for="Game.Id" hidden />
        <div class="form-group row">
            <h2 class="text-info pl-3">Удалить запись</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Game.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Game.Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Game.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Game.Price" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Game.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Game.Description" class="form-control summernote"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Game.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select disabled asp-for="Game.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                            <option disabled selected>--Выбор категории--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Game.PublisherId"></label>
                    </div>
                    <div class="col-8">
                        <select disabled asp-for="Game.PublisherId" asp-items="@Model.PublisherSelectList" class="form-control">
                            <option disabled selected>--Выбор издателя--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Удалить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100">
                                <i class="fa-solid fa-right-from-bracket"></i> Назад
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <img src="@WebConst.ImagePath@Model.Game.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $('.summernote').summernote('disable', {
                heihgt: 250,
            })
        })
    </script>
}





